[module/date]
type = internal/date
interval = 5

date =
date-alt = " %d-%m-%Y"

time = %H:%M
time-alt = %H:%M

format =  <label>
label = %time% %date%

[module/updates]
type = custom/script
interval = 3600
exec-if = [ $(checkupdates | wc -l) -ne "0" ]
exec = ~/bin/pac_updt
format-underline = #FF4924
format =  <label>
click-left = terminator -be "echo \"Updating system...\"; sudo pacman -Syu; or cat"

